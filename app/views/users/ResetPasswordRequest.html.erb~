<h1>Password Reset</h1>


<%= form_for @user, :as => :user, :url => { :action => "ResetPassword" }, :html => { :id => "reset_password" } do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
	<%= f.hidden_field(:id) %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

