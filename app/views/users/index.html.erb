<h1>Listing users</h1>
<hr />

<%= will_paginate @users %>

<table>
  <tr>
    <th>Name</th>
    <th>email</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= gravatar_for user, :size => 30 %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

