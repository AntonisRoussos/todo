<%= form_for @user, :as => :user, :url => { :action => "ChangePassword" }, :html => { :id => "change_password" } do |f| %>

  <%= render 'shared/error_messages', :object => f.object %>
   
  <div class="field">
	<%= f.hidden_field(:id) %>
  </div>

  <div class="field">
  Existing password <input id="existing_user_password" name="existinguserpassword" size="30" type="password" />
  </div>
  <div class="field">
    <%= f.label :password, t(:New_password) %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, t(:Confirm_new_password) %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit t(:Update) %>
  </div>
<% end %>

