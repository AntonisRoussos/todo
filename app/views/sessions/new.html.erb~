<h1><%= t(Sign_in) %></h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label t(:email) %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, t(:password) %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t(:Sign_in) %>
  </div>
<% end %>

<p><%= t(:New_user?) %> <%= link_to t(:Sign_up_now!), signup_path %>
<%= link_to t(:Forgot_your_password),  :controller => "users", :action => "MailPasswordRequest" %>
</p>
